<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FabrikamFood.PlaceOrder">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />

  <StackLayout Spacing="0" x:Name="layout" BackgroundColor="White">
    
    <Entry Placeholder="enter name" FontSize="14" x:Name="name" TextColor="#FFFFFF" />
    <Button Text="Submit" TextColor="Yellow" VerticalOptions="FillAndExpand" BackgroundColor="Purple"
        HorizontalOptions="FillAndExpand" Clicked="SubmitButtonClicked"/>
  </StackLayout>
</ContentPage>